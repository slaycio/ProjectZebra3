<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ProjectZEBRA3" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>pl.altoriis.projectzebra3.datamodel.Account</class>
		<class>pl.altoriis.projectzebra3.datamodel.AccountType</class>
		<class>pl.altoriis.projectzebra3.datamodel.AccountOwner</class>
		<class>pl.altoriis.projectzebra3.datamodel.FinancialInstitution</class>
		<class>pl.altoriis.projectzebra3.datamodel.Transaction</class>
		<class>pl.altoriis.projectzebra3.datamodel.TransactionEntity</class>
		<class>pl.altoriis.projectzebra3.datamodel.User</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/zebraDB"/>
			<property name="javax.persistence.jdbc.user" value="SA"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>
	</persistence-unit>
</persistence>
